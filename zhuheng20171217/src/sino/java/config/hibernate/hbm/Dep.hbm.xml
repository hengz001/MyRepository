<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="sino.java.po.dep">
	<class name="Department" table="tb_dep">
		<id name="dep_id">
			<generator class="native"></generator>
		</id>

		<property name="dep_sn"></property>
		<property name="dep_name"></property>
		<property name="dep_desc"></property>
		<property name="flag"></property>
		
		<many-to-one column="pid" name="parent"/>
		<set name="child" lazy="false" inverse="true">
			<key column="pid"/>
			<one-to-many class="Department"/>
		</set>
	</class>
</hibernate-mapping>

